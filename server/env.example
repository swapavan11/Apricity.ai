NODE_ENV=development

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Gemini (Google Generative AI)
# Get an API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
# Optional: override model (defaults to gemini-1.5-flash). Examples:
# gemini-2.5-flash | gemini-2.0-flash | gemini-1.5-flash | gemini-1.5-pro
GEMINI_MODEL=gemini-1.5-flash

# MongoDB
MONGODB_URI=mongodb://localhost:27017/quizhive

# JWT
JWT_SECRET=change-me-super-secret
JWT_EXPIRES_IN=7d

# Session
SESSION_SECRET=change-me-session-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Optional: if not set, will default to BACKEND_URL + /api/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# SMS/OTP removed: no Twilio configuration required
